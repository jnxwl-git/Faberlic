#!/bin/sh
DATE='date+%d.%m.%Y..%H:%M'
/opt/firebird/bin/gbak -b -g -v -user *USER* -pas *PAS* /database/namebase.gdb /database/backup/$DATE.bak


tar -czvf /database/backup/$DATE.tar.gz /database/backup/$DATE.bak
sleep 500
rm /database/backup/$DATE.bak
exit 0

